<div id="results">
	<h1>Results</h1>
  <table>
	  <tr>
	  	<th>id</th>
	  	<th>question</th>
	  	<th>your answer</th>
	    <th>correct answer</th>
	  	<th>% correct</th>
	  </tr>
	  <% @questions.each_with_index do |q, i| %>
	    <tr>
	      <td><%= q.id %></td>
	      <td><%= q.text %></td>
	      <td><%= show_answer(@answers["q#{(i + 1)}"], q.answer) %></td>
	      <td><%= q.answer %></td>
	      <td><%= q.percent_correct %></td>
	    </tr>
	  <% end %>
  </table>
  <p id="legend"><span class="good">correct answer</span> | <span class="bad">incorrect answer</span></p>
  <p id="try-again"><a href="/question/1">try again?</a></p>
</div>
